@model proj1.Models.ViewModel.ProductsViewModel
@using proj1.Extensions
@{
    ViewData["Title"] = "Edit";
}


<br />
<h2 class="text-info"> Edit Product</h2>
<form asp-action="Edit"  method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Products.ProductId" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" class="form-control" />
                </div>
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Quantity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Products.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Description" class="form-control" />
                </div>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Image"></label>
                </div>
                <div class="col-8">
                    <div>
                    <input type="file" name="files" class="form-control" />

                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Brands"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.BrandId" asp-items="Model.Brands.ToSelectListItems(Model.Products.BrandId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Providers"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.ProvidersId" asp-items="Model.Providers.ProviderSelect(Model.Products.ProvidersId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.TypeId" asp-items="Model.ProductTypes.TypeSelect(Model.Products.TypeId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary"  value="Update"  />
                <a asp-action="Index" class="btn btn-success">Back to list</a>
            </div>
        </div>
        <div class="col-7 row">
            <img src="@Model.Products.Image" width="100%" height="50%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


    </div>
    <br />
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
}