@model proj1.Models.ViewModel.ProductsViewModel
@using proj1.Extensions



<br />
<h2 class="text-info"> Delete Product</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Products.ProductId" />
        </div>
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Quantity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Quantity" readonly class="form-control" />
                </div>
                <span asp-validation-for="Products.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Description" readonly class="form-control" />
                </div>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Brands"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Brand.BrandName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Providers"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Providers.ProviderName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.NameType" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-danger"  value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to list</a>
            </div>
        </div>
        <div class="col-7 row">
            <img src="@Model.Products.Image" width="100%" height="50%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


    </div>
    <br />
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}